<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:background="#fcefc2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        >
        <ImageView
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:src="@drawable/booking"
            android:layout_centerHorizontal="true"
            android:paddingBottom="30dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp">


        <EditText
            android:id="@+id/idGoEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="아이디"
            android:textSize="25sp" />


        <EditText
            android:id="@+id/pwGoEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idGoEditText"
            android:hint="비밀번호"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="270sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/loginButton"
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/pwGoEditText"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10dp"
                android:background="@color/login_btn_black"
                android:text="로그인"
                android:textColor="#fde387"
                android:textSize="25sp" />

            <Button
                android:id="@+id/goSignUpButton"
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/loginButton"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10dp"
                android:background="@color/login_btn_black"
                android:text="회원가입"
                android:textColor="#fde387"
                android:textSize="25sp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>